<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.othello">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Welcome.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainMenu.MainMenu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Game.GameOption"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.MainMenu.Option.OnePlayerOption"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.MainMenu.Option.TwoPlayersOption"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Game.Game"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Statistics.Statistics"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.How.How"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Settings.Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.About.About"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service android:name=".Service.MusicBg" />

        <activity android:name=".Activities.Game.GameOnePlayer" />
        <activity android:name=".Activities.Game.GameTwoPlayer"></activity>
    </application>

</manifest>